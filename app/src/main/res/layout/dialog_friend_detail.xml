<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dialog">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.04" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.32" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.36" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.64" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.68" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_6"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.96" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.86" />

        <androidx.cardview.widget.CardView
            android:id="@+id/view_profile_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.36"
            app:cardCornerRadius="@dimen/value_friend_detail_profile_radius"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline_horizontal_1">

            <ImageView
                android:id="@+id/img_friend_detail_Profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/description_profile_img"
                android:scaleType="centerCrop"
                android:src="@drawable/img_basic_profile" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_friend_detail_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_friend_detail_nickname_top"
            android:gravity="center"
            android:text="123"
            android:textSize="@dimen/text_friend_detail_nickname"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_profile_img"
            tools:text="코랑" />

        <TextView
            android:id="@+id/text_friend_detail_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_friend_detail_status_top"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="123224"
            android:textSize="@dimen/text_friend_detail_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_friend_detail_nickname"
            tools:text="rkskekfkfkfk" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_btn_round_dialog"
            android:textColor="@color/theme_color"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_3"
            app:layout_constraintDimensionRatio="4:2"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical_4"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_3">

            <ImageView
                android:id="@+id/img_btn_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/img_friend_detail_ic"
                android:layout_marginTop="@dimen/margin_friend_detail_btn_top"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_tab_schedule"
                app:layout_constraintBottom_toTopOf="@id/text_btn_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/theme_color" />

            <TextView
                android:id="@+id/text_btn_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_friend_detail_btn_text_bottom"
                android:gravity="center"
                android:text="@string/friend_detail_schedule"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_friend_detail_ic"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_btn_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_btn_round_dialog"
            android:textColor="@color/theme_color"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_3"
            app:layout_constraintDimensionRatio="4:2"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical_6"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_5">

            <ImageView
                android:id="@+id/img_btn_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/img_friend_detail_ic"
                android:layout_marginTop="@dimen/margin_friend_detail_btn_top"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_delete"
                app:layout_constraintBottom_toTopOf="@id/text_btn_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/theme_color" />

            <TextView
                android:id="@+id/text_btn_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_friend_detail_btn_text_bottom"
                android:gravity="center"
                android:text="@string/friend_detail_delete"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_friend_detail_ic"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_btn_3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_btn_round_dialog"
            android:textColor="@color/theme_color"
            app:layout_constraintBottom_toBottomOf="@id/guideline_horizontal_3"
            app:layout_constraintDimensionRatio="4:2"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical_2"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_1">

            <ImageView
                android:id="@+id/img_btn_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/img_friend_detail_ic"
                android:layout_marginTop="@dimen/margin_friend_detail_btn_top"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_tab_chat"
                app:layout_constraintBottom_toTopOf="@id/text_btn_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/theme_color" />

            <TextView
                android:id="@+id/text_btn_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_friend_detail_btn_text_bottom"
                android:gravity="center"
                android:text="@string/friend_detail_chat"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_friend_detail_ic"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_btn_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>