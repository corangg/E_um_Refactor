<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/view_profile_img"
            android:layout_width="@dimen/img_friend_item_profile"
            android:layout_height="@dimen/img_friend_item_profile"
            app:cardCornerRadius="@dimen/value_friend_item_profile_radius"
            android:layout_margin="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_Profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/description_profile_img"
                android:scaleType="centerCrop"
                android:src="@drawable/img_basic_profile" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_item_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_chat_item"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/text_friend_item_nickname"
            android:textStyle="bold"
            android:maxWidth="@dimen/value_chat_item_max_with_profile"
            app:layout_constraintStart_toEndOf="@id/view_profile_img"
            app:layout_constraintTop_toTopOf="@id/view_profile_img"
            tools:text="이강현" />

        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_chat_item"
            android:background="@drawable/bg_btn_round"
            android:ellipsize="end"
            android:maxWidth="@dimen/value_chat_item_max_with_profile"
            android:maxLines="5"
            android:padding="@dimen/padding_chat_item_text"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/view_profile_img"
            app:layout_constraintTop_toBottomOf="@id/text_item_nickname"
            tools:text="가나다asdadasdaffasdfasffassdfsdfdsdddddddddddddddddddddd" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>