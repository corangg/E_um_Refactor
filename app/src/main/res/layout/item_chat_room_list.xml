<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_chat_room"
        android:paddingVertical="@dimen/padding_friend_item_vertical"
        android:paddingHorizontal="@dimen/padding_friend_item_horizontal"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/view_profile_img"
            android:layout_width="@dimen/img_chat_room_item_profile"
            android:layout_height="@dimen/img_chat_room_item_profile"
            app:cardCornerRadius="@dimen/value_chat_room_item_profile_radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_Profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/description_profile_img"
                android:scaleType="centerCrop"
                android:src="@drawable/img_basic_profile" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_item_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_friend_my_nickname_start"
            android:layout_marginEnd="@dimen/margin_friend_my_nickname_end"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/text_chat_room_item_nickname"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/text_item_last_massage"
            app:layout_constraintEnd_toStartOf="@id/text_chat_alarm"
            app:layout_constraintStart_toEndOf="@id/view_profile_img"
            app:layout_constraintTop_toTopOf="@id/view_profile_img"
            tools:text="이강현" />

        <TextView
            android:id="@+id/text_item_last_massage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_friend_my_nickname_start"
            android:layout_marginEnd="@dimen/margin_friend_my_nickname_end"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/text_chat_room_item_status_message"
            app:layout_constraintBottom_toBottomOf="@id/view_profile_img"
            app:layout_constraintEnd_toStartOf="@id/text_chat_alarm"
            app:layout_constraintStart_toEndOf="@id/view_profile_img"
            app:layout_constraintTop_toBottomOf="@id/text_item_nickname"
            tools:text="rkskfkslfjalfjlzjlfjlkzjflsafwsfasadfdasfesdfasfawefawefawfwefjdlkflsjef" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/text_chat_alarm"
            tools:text="14"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/bg_circle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>