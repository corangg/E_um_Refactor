<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.presentation.SignUpViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.activity.SignUpActivity">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.08" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/img_btn_back_activity"
                android:layout_width="@dimen/img_toolbar_back_button_size"
                android:layout_height="@dimen/img_toolbar_back_button_size"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_back"
                android:backgroundTint="@color/theme_color"
                app:layout_constraintBottom_toTopOf="@id/guideline_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_toolbar_title_start"
                android:text="@string/signup_title"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_toolbar_size"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/guideline_toolbar"
                app:layout_constraintStart_toEndOf="@id/img_btn_back_activity"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_default_guideline_height"
                android:background="@color/theme_color"
                app:layout_constraintEnd_toEndOf="@id/guideline_toolbar"
                app:layout_constraintStart_toStartOf="@id/guideline_toolbar"
                app:layout_constraintTop_toTopOf="@id/guideline_toolbar" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_signup_edit_horizontal"
                android:layout_marginTop="@dimen/margin_signup_email_edit_top"
                android:autofillHints="emailAddress"
                android:background="@drawable/bg_edit_default"
                android:hint="@string/signup_email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/padding_signup_edit"
                android:text="@={viewModel.emailLiveData}"
                android:textColor="@color/theme_color"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/text_signup_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guideline_toolbar" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_signup_edit_horizontal"
                android:layout_marginTop="@dimen/margin_signup_edit_to_edit"
                android:autofillHints="password"
                android:background="@drawable/bg_edit_default"
                android:hint="@string/signup_password"
                android:inputType="textPassword"
                android:padding="@dimen/padding_signup_edit"
                android:text="@={viewModel.passwordLiveData}"
                android:textColor="@color/theme_color"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/text_signup_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_email" />

            <EditText
                android:id="@+id/edit_password_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_signup_edit_horizontal"
                android:layout_marginTop="@dimen/margin_signup_edit_to_edit"
                android:autofillHints="password"
                android:background="@drawable/bg_edit_default"
                android:hint="@string/signup_password_check"
                android:inputType="textPassword"
                android:padding="@dimen/padding_signup_edit"
                android:text="@={viewModel.passwordCheckLiveData}"
                android:textColor="@color/theme_color"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/text_signup_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_password" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_signup_edit_horizontal"
                android:layout_marginTop="@dimen/margin_signup_name_edit_top"
                android:autofillHints="name"
                android:background="@drawable/bg_edit_default"
                android:hint="@string/signup_name"
                android:inputType="text"
                android:padding="@dimen/padding_signup_edit"
                android:text="@={viewModel.nameLiveData}"
                android:textColor="@color/theme_color"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/text_signup_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_password_check" />

            <EditText
                android:id="@+id/edit_nick_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_signup_edit_horizontal"
                android:layout_marginTop="@dimen/margin_signup_edit_to_edit"
                android:autofillHints="username"
                android:background="@drawable/bg_edit_default"
                android:hint="@string/signup_nick_name"
                android:inputType="text"
                android:padding="@dimen/padding_signup_edit"
                android:text="@={viewModel.nicknameLiveData}"
                android:textColor="@color/theme_color"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/text_signup_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_name" />

            <EditText
                android:id="@+id/edit_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_signup_edit_horizontal"
                android:layout_marginTop="@dimen/margin_signup_phone_edit_top"
                android:autofillHints="phone"
                android:background="@drawable/bg_edit_default"
                android:hint="@string/signup_phone_number"
                android:inputType="phone|number"
                android:padding="@dimen/padding_signup_edit"
                android:text="@={viewModel.phoneLiveData}"
                android:textColor="@color/theme_color"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/text_signup_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_nick_name" />

            <EditText
                android:id="@+id/edit_address_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_signup_edit_horizontal"
                android:layout_marginTop="@dimen/margin_signup_address_edit_top"
                android:autofillHints=""
                android:background="@drawable/bg_edit_default"
                android:focusable="false"
                android:hint="@string/signup_address_number"
                android:inputType="number"
                android:padding="@dimen/padding_signup_edit"
                android:text="@={viewModel.zoneCodeLiveData}"
                android:textColor="@color/theme_color"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/text_signup_edit"
                app:layout_constraintEnd_toStartOf="@id/btn_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_phone_number" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_signup_address_num_to_search"
                android:layout_marginEnd="@dimen/margin_signup_edit_horizontal"
                android:background="@drawable/bg_btn_round_hollow"
                android:text="@string/signup_search"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_signup_search"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/edit_address_num"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/edit_address_num"
                app:layout_constraintTop_toTopOf="@id/edit_address_num" />


            <EditText
                android:id="@+id/edit_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_signup_edit_horizontal"
                android:layout_marginTop="@dimen/margin_signup_edit_to_edit"
                android:autofillHints="postalAddress"
                android:background="@drawable/bg_edit_default"
                android:focusable="false"
                android:hint="@string/signup_address"
                android:inputType="text"
                android:padding="@dimen/padding_signup_edit"
                android:text="@={viewModel.addressLiveData}"
                android:textColor="@color/theme_color"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/text_signup_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_address_num" />

            <EditText
                android:id="@+id/edit_address_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_signup_edit_horizontal"
                android:layout_marginTop="@dimen/margin_signup_edit_to_edit"
                android:autofillHints="postalAddress"
                android:background="@drawable/bg_edit_default"
                android:hint="@string/signup_address_detail"
                android:inputType="text"
                android:padding="@dimen/padding_signup_edit"
                android:text="@={viewModel.detailAddressLiveData}"
                android:textColor="@color/theme_color"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="@dimen/text_signup_edit"
                app:layout_constraintBottom_toTopOf="@id/btn_sign_up"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_address" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_signup_edit_horizontal"
                android:layout_marginTop="@dimen/margin_signup_btn_top"
                android:background="@drawable/bg_btn_round_hollow"
                android:onClick="@{()->viewModel.trySignUp()}"
                android:text="@string/signup_btn"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_signup_search"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edit_address_detail" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>